{
	"scripts": {
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch_tsc": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"build": "npm install && npm run chrome/build && npm run vscode/code",
		"chrome/build": "webpack --config build/webpack.chrome.js --mode development",
		"chrome/watch": "webpack --config build/webpack.chrome.js --mode development --watch",
		"chrome/pre-publish": "webpack --config build/webpack.chrome.js --mode production",
		"chrome/publish": "npm run chrome/pre-publish && web-ext build -s dist/chrome -a releases/chrome",
		"vscode/build": "webpack --config build/webpack.vscode.js --mode development",
		"vscode/watch": "webpack --config build/webpack.vscode.js --mode development --watch",
		"vscode/pre-publish": "webpack --config build/webpack.vscode.js --mode production",
		"vscode/publish": "npm run vscode/pre-publish && cd dist/vscode && vsce package --out ../../releases/vscode"
	},
	"dependencies": {
		"js-yaml": "^3.5.5"
	},
	"devDependencies": {
		"@types/chrome": "0.0.100",
		"@types/js-yaml": "^3.5.5",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^5.1.1",
		"eslint": "^6.8.0",
		"mocha": "^7.0.1",
		"ts-loader": "^6.2.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0",
		"vsce": "1.74.0",
		"webpack": "~4.42.0",
		"webpack-cli": "~3.3.11"
	}
}
